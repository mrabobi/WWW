<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">SmartHome.UI</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Friends" Match="NavLinkMatch.All">
                <span class="oi oi-person" aria-hidden="true"></span> Friends
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Groups" Match="NavLinkMatch.All">
                <span class="oi oi-people" aria-hidden="true"></span> Groups
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="CreateGroup" Match="NavLinkMatch.All">
                <span class="oi oi-plus" aria-hidden="true"></span> Create Group
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="ScanDevices" Match="NavLinkMatch.All">
                <span class="oi oi-signal" aria-hidden="true"></span> Scan Devices
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Devices" Match="NavLinkMatch.All">
                <span class="oi oi-audio" aria-hidden="true"></span> Devices
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="DeviceClaims" Match="NavLinkMatch.All">
                <span class="oi oi-briefcase" aria-hidden="true"></span> Device Claims
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
